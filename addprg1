#include<stdio.h>
int getinput()
{
 int a,b,s;
printf("enter the values for a and b \n");
scanf("%d %d",&a,&b);
s=add(a,b);
return s;
}
int add(int a,int b)
{
 int c ;
c=a+b;
return c;
}
int output(int sum)
{
 printf("the sumation of two numbers is %d",sum);
}
void main()
{
 int sum=getinput();
 output(sum);
}
