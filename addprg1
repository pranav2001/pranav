#include<stdio.h>
int getinput(int *a,int *b)
{

printf("enter the values for a and b \n");
scanf("%d %d",a,b);
}
int add(int c,int d)
{
 int q ;
q=c+d;
return q;
}
int output(int sum)
{
 printf("the sumation of two numbers is %d",sum);
}
void main()
{
int a,b;
getinput(&a,&b);
int s=add(a,b);
output(s);

}


